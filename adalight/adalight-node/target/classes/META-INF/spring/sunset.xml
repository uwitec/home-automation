<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- Sunset -->
    <bean id="daytimeController" class="nl.johnvanweel.iot.light.controller.DaytimeController"/>
    <bean class="nl.johnvanweel.iot.light.sunset.DummySunsetService"/>

    <bean id="jobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="daytimeController"/>
        <property name="targetMethod" value="run"/>
    </bean>

    <bean id="lightsUpdateTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="jobDetail"/>
        <property name="cronExpression" value="0/1 * * * * ?"/>
    </bean>

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="lightsUpdateTrigger"/>
            </list>
        </property>
    </bean>
</beans>