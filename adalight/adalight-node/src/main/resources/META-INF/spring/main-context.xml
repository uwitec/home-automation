<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


    <context:annotation-config/>

    <import resource="access.xml"/>
    <import resource="cluster-access.xml"/>


    <!-- Runmode control-->
    <bean class="nl.johnvanweel.iot.light.runmode.RunModeControl">
        <property name="defaultMode" ref="nl.johnvanweel.iot.light.runmode.SpectrumMode"/>
    </bean>

    <!-- Runmodes -->
    <bean class="nl.johnvanweel.iot.light.runmode.FancySpectrumMode">
        <property name="speed" value="200"/>
    </bean>
    <bean class="nl.johnvanweel.iot.light.runmode.SpectrumMode">
        <property name="speed" value="200"/>
    </bean>
    <bean class="nl.johnvanweel.iot.light.runmode.StaticMode">
        <property name="speed" value="1000"/>
    </bean>

    <!-- Supporting beans-->
    <bean class="nl.johnvanweel.iot.light.step.FancySpectrum"/>
    <bean class="nl.johnvanweel.iot.light.step.Spectrum"/>

    <!-- Configuration -->
    <bean class="nl.johnvanweel.iot.light.configuration.LightsConfiguration">
        <property name="numberOfLights" value="20"/>
    </bean>

    <!--<import resource="step.xml"/>-->
    <!--<import resource="sunset.xml"/>-->
</beans>