<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- Groups setup -->
    <bean class="nl.johnvanweel.iot.access.cluster.JGroupsChannel">
        <property name="clusterName" value="HOME_AUTOMATION"/>
        <property name="configuration" value="udp.xml"/>
    </bean>
    <bean class="nl.johnvanweel.iot.access.cluster.listener.ClusterReceiverAdapter"/>

    <!-- Listeners -->
    <bean class="nl.johnvanweel.iot.access.cluster.listener.IdentifyMessageListener"/>
    <bean abstract="true" class="nl.johnvanweel.iot.access.cluster.listener.IdentifyResponseMessageListener"/>
</beans>